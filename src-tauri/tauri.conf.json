{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
    "productName": "Nexus",
    "version": "0.1.0",
    "identifier": "io.github.mi2h1.nexus",
    "build": {
        "beforeDevCommand": "pnpm start",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../webapp"
    },
    "app": {
        "windows": [
            {
                "title": "Nexus",
                "width": 1280,
                "height": 800,
                "minWidth": 960,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": true,
        "windows": {
            "webviewInstallMode": {
                "type": "embedBootstrapper",
                "silent": true
            }
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "",
            "endpoints": [
                "https://github.com/mi2h1/nexus/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
