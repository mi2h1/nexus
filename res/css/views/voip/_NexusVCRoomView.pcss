.nx_VCRoomView {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
    position: relative;
    background-color: var(--cpd-color-bg-canvas-default);

    &.nx_VCRoomView--focusMode {
        /* content が absolute で全体を覆い、ControlBar の下に潜り込む */
        .nx_VCRoomView_content {
            position: absolute;
            inset: 0;
        }

        .nx_VCControlBar {
            margin-top: auto;
            z-index: 1;
        }
    }
}

/* ─── Empty state (not connected) ──────────────────── */

.nx_VCRoomView_empty {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--cpd-space-4x);
}

.nx_VCRoomView_emptyText {
    font: var(--cpd-font-body-lg-regular);
    color: var(--cpd-color-text-secondary);
}

.nx_VCRoomView_joinButton {
    padding: var(--cpd-space-2x) var(--cpd-space-6x);
    border-radius: var(--cpd-space-2x);
    border: none;
    cursor: pointer;
    font: var(--cpd-font-body-md-medium);
    color: #000;
    background-color: #fff;

    &:hover {
        background-color: #e0e0e0;
    }
}

.nx_VCRoomView_content {
    flex: 1;
    min-height: 0;
    display: flex;
    overflow: hidden;
}

/* ─── Spotlight layout ─────────────────────────────── */

.nx_VCRoomView_spotlight {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: var(--cpd-space-4x);
    padding: var(--cpd-space-4x);
    min-height: 0;
    transition: gap 0.3s ease, padding 0.3s ease;

    &.nx_VCRoomView_spotlight--focusMode {
        gap: 0;
        padding: 0;
    }
}

.nx_VCRoomView_spotlightMain {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 0;
    min-height: 0;
    overflow: hidden;
    border-radius: var(--cpd-space-3x);
    background-color: var(--cpd-color-bg-subtle-secondary);
    transition: border-radius 0.3s ease;

    .nx_VCRoomView_spotlight--focusMode & {
        border-radius: 0;
    }

    /* ScreenShareTile video fills the main area */
    .mx_NexusScreenShareTile {
        width: 100%;
        height: 100%;
    }

    .mx_NexusScreenShareTile_video {
        width: 100%;
        height: 100%;
        object-fit: contain;
        border-radius: var(--cpd-space-3x);
    }
}

.nx_VCRoomView_spotlightLabel {
    position: absolute;
    bottom: var(--cpd-space-3x);
    left: var(--cpd-space-3x);
    padding: var(--cpd-space-1x) var(--cpd-space-3x);
    background-color: rgba(0, 0, 0, 0.6);
    color: #fff;
    font: var(--cpd-font-body-sm-medium);
    border-radius: var(--cpd-space-2x);
    pointer-events: none;
}

.nx_VCRoomView_spotlightAvatar {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--cpd-space-3x);
}

.nx_VCRoomView_spotlightAvatarName {
    font: var(--cpd-font-heading-md-semibold);
    color: var(--cpd-color-text-primary);
    text-align: center;
}

.nx_VCRoomView_spotlightEmpty {
    font: var(--cpd-font-body-lg-regular);
    color: var(--cpd-color-text-secondary);
}

.nx_VCRoomView_spotlightBottomBar {
    display: flex;
    flex-direction: row;
    gap: var(--cpd-space-3x);
    height: 100px;
    flex-shrink: 0;
    overflow-x: auto;
    overflow-y: hidden;
    align-items: center;
    padding: 0 var(--cpd-space-1x);
    transition: height 0.3s ease, opacity 0.2s ease;

    &.nx_VCRoomView_spotlightBottomBar--hidden {
        height: 0;
        opacity: 0;
        pointer-events: none;
    }
}

.nx_VCRoomView_spotlightBottomBar_item {
    cursor: pointer;
    flex-shrink: 0;
    border-radius: var(--cpd-space-2x);
    border: 2px solid transparent;
    transition: border-color 0.15s ease;

    &:hover {
        border-color: var(--cpd-color-border-interactive-hovered);
    }

    &.selected {
        border-color: var(--cpd-color-border-interactive-primary);
    }
}

.nx_VCRoomView_spotlightBottomBar_screenShare {
    width: 160px;
    height: 100px;
    border-radius: var(--cpd-space-2x);
    overflow: hidden;
    background-color: var(--cpd-color-bg-subtle-secondary);

    .mx_NexusScreenShareTile {
        width: 100%;
        height: 100%;
    }

    .mx_NexusScreenShareTile_video {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
}

/* ─── Grid layout ──────────────────────────────────── */

.nx_VCRoomView_grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    gap: var(--cpd-space-4x);
    padding: var(--cpd-space-3x);
    flex: 1;
    min-height: 0;
    overflow: hidden;
}

.nx_VCRoomView_gridPanel {
    border-radius: var(--cpd-space-3x);
    overflow: hidden;
    cursor: pointer;
    flex-shrink: 0;
    width: var(--panel-w);
    height: var(--panel-h);
    border: 3px solid transparent;
    transition: border-color 0.2s ease;

    &.nx_VCRoomView_gridPanel--speaking {
        border-color: var(--cpd-color-icon-success-primary);
        transition: border-color 0.05s ease;
    }

    > .mx_NexusVoiceParticipantTile {
        width: 100%;
        height: 100%;
        border: none;
    }
}

.nx_VCRoomView_gridScreenShare {
    width: 100%;
    height: 100%;
    background-color: #000;

    .mx_NexusScreenShareTile {
        width: 100%;
        height: 100%;
    }

    .mx_NexusScreenShareTile_video {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
}

/* ─── Focus overlay (non-focus mode, hover to show) ── */

.nx_VCRoomView_focusOverlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: var(--cpd-space-4x);
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
    opacity: 0;
    transition: opacity 0.15s ease;
    pointer-events: none;
    z-index: 2;

    .nx_VCRoomView_spotlightMain:hover & {
        opacity: 1;
        pointer-events: auto;
    }
}

.nx_VCRoomView_focusToggleButton {
    padding: var(--cpd-space-1x) var(--cpd-space-3x);
    border: none;
    border-radius: 9999px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #fff;
    font: var(--cpd-font-body-sm-semibold);
    cursor: pointer;

    &:hover {
        background-color: rgba(0, 0, 0, 0.85);
    }
}

.nx_VCRoomView_gridEmpty {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font: var(--cpd-font-body-lg-regular);
    color: var(--cpd-color-text-secondary);
}

.nx_VCRoomView_gridScreenSharePreview {
    position: relative;
    cursor: pointer;
}

/* ─── Screen share preview overlay (opt-in) ───────── */

.nx_VCRoomView_screenSharePreview {
    position: relative;
    width: 160px;
    height: 100px;
    overflow: hidden;

    .mx_NexusScreenShareTile {
        width: 100%;
        height: 100%;
    }

    .mx_NexusScreenShareTile_video {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .mx_NexusScreenShareTile_label {
        display: none;
    }
}

.nx_VCRoomView_screenSharePreview_overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
}

.nx_VCRoomView_screenSharePreview_button {
    padding: 4px 12px;
    background-color: var(--cpd-color-bg-action-primary-rest);
    color: var(--cpd-color-text-on-solid-primary);
    font: var(--cpd-font-body-sm-medium);
    border-radius: var(--cpd-space-2x);

    &:hover {
        background-color: var(--cpd-color-bg-action-primary-hovered);
    }
}
